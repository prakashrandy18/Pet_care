---
import PageLayout from '../layouts/PageLayout.astro'
import Breadcrumb from '../components/common/Breadcrumb.astro'
import { pageSEO } from '../config/seo'
import { siteConfig } from '../config/theme'

const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Contact' }
]
---

<PageLayout
  title={pageSEO.contact.title}
  description={pageSEO.contact.description}
>
  <!-- Breadcrumb -->
  <div class="bg-gray-50 dark:bg-gray-900 pt-20">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <Breadcrumb items={breadcrumbItems} />
    </div>
  </div>

  <!-- Hero Section -->
  <section class="relative py-20 bg-gradient-to-br from-accent-50 via-white to-primary-50 dark:from-gray-900 dark:via-gray-950 dark:to-gray-900">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-4xl mx-auto">
        <div class="inline-flex items-center gap-2 bg-accent-100 dark:bg-accent-900/30 text-accent-700 dark:text-accent-400 px-4 py-2 rounded-full text-sm font-medium mb-6">
          <span>üìû</span>
          <span>Contact Us</span>
        </div>
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold text-gray-900 dark:text-white mb-6">
          Let's Get Your Pet <span class="text-gradient">Started</span>
        </h1>
        
        <p class="text-xl text-gray-600 dark:text-gray-400">
          Book a service, schedule a tour, or just say hello! We're here to help.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Info & Forms Section -->
  <section class="section-padding">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Contact Information -->
        <div class="lg:col-span-1 space-y-8">
          <!-- Quick Contact -->
          <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-soft p-6">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">
              Quick Contact
            </h3>
            
            <div class="space-y-4">
              <a
                href={`tel:${siteConfig.phone}`}
                class="flex items-start gap-4 p-4 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors group"
              >
                <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900/30 rounded-full flex items-center justify-center text-primary-600 dark:text-primary-400 group-hover:scale-110 transition-transform">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-gray-900 dark:text-white">Call Us</p>
                  <p class="text-primary-600 dark:text-primary-400">{siteConfig.phone}</p>
                </div>
              </a>
              
              <a
                href={`mailto:${siteConfig.email}`}
                class="flex items-start gap-4 p-4 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors group"
              >
                <div class="w-12 h-12 bg-secondary-100 dark:bg-secondary-900/30 rounded-full flex items-center justify-center text-secondary-600 dark:text-secondary-400 group-hover:scale-110 transition-transform">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-gray-900 dark:text-white">Email Us</p>
                  <p class="text-secondary-600 dark:text-secondary-400">{siteConfig.email}</p>
                </div>
              </a>
              
              <div class="flex items-start gap-4 p-4">
                <div class="w-12 h-12 bg-accent-100 dark:bg-accent-900/30 rounded-full flex items-center justify-center text-accent-600 dark:text-accent-400">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-gray-900 dark:text-white">Visit Us</p>
                  <p class="text-gray-600 dark:text-gray-400">
                    {siteConfig.address.street}<br />
                    {siteConfig.address.city}, {siteConfig.address.state} {siteConfig.address.zip}
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Operating Hours -->
          <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-soft p-6">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">
              Operating Hours
            </h3>
            
            <div class="space-y-3">
              <div class="flex justify-between items-center py-2 border-b border-gray-100 dark:border-gray-700">
                <span class="text-gray-600 dark:text-gray-400">Monday - Friday</span>
                <span class="font-medium text-gray-900 dark:text-white">{siteConfig.hours.weekday}</span>
              </div>
              <div class="flex justify-between items-center py-2 border-b border-gray-100 dark:border-gray-700">
                <span class="text-gray-600 dark:text-gray-400">Saturday</span>
                <span class="font-medium text-gray-900 dark:text-white">{siteConfig.hours.saturday}</span>
              </div>
              <div class="flex justify-between items-center py-2">
                <span class="text-gray-600 dark:text-gray-400">Sunday</span>
                <span class="font-medium text-gray-900 dark:text-white">{siteConfig.hours.sunday}</span>
              </div>
            </div>
            
            <div class="mt-6 p-4 bg-green-50 dark:bg-green-900/20 rounded-lg">
              <p class="text-sm text-green-700 dark:text-green-400 flex items-center gap-2">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                24/7 boarding services available
              </p>
            </div>
          </div>

        </div>

        <!-- Forms Column -->
        <div class="lg:col-span-2 space-y-12">
          <!-- Contact Form -->
          <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl p-8">
            <div class="text-center">
              <div class="text-5xl mb-4">üêæ</div>
              <h2 class="text-2xl font-display font-bold text-gray-900 dark:text-white mb-4">
                Send Us a Message
              </h2>
              <p class="text-gray-600 dark:text-gray-400 mb-8">
                Tell us about your pet and how we can help. We'll get back to you within 24 hours!
              </p>
              <a
                href="https://forms.gle/fbJmQ9DtNic2fhcE6"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-8 py-4 bg-primary-500 text-white rounded-xl font-semibold text-lg hover:bg-primary-600 transition-all duration-200 shadow-lg hover:shadow-xl"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                Send Message
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-2M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </div>
          </div>

          <!-- Booking Form -->
          <div id="booking" class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl p-8">
            <div class="text-center">
              <div class="text-5xl mb-4">üìÖ</div>
              <h2 class="text-2xl font-display font-bold text-gray-900 dark:text-white mb-4">
                Book a Service
              </h2>
              <p class="text-gray-600 dark:text-gray-400 mb-8">
                Ready to book daycare or boarding for your pet? Fill out our booking form and we'll confirm your appointment.
              </p>
              <a
                href="https://forms.gle/YJ4bxyNAo1SmQ92v9"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-8 py-4 bg-green-500 text-white rounded-xl font-semibold text-lg hover:bg-green-600 transition-all duration-200 shadow-lg hover:shadow-xl"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                Book Now
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-2M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="section-padding bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-display font-bold text-gray-900 dark:text-white mb-4">
          Find Us Here
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
          Conveniently located with ample parking and easy access
        </p>
      </div>
      
      <!-- Google Maps Embed -->
      <div class="relative h-96 bg-gray-200 dark:bg-gray-800 rounded-2xl overflow-hidden shadow-lg">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3886.0746483944943!2d80.1013128!3d13.1206892!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3a526f8b10000000%3A0x0!2s3rd%20street%2C%20Kalaingar%20Nagar%2C%20Avadi%2C%20Chennai%2C%20Tamil%20Nadu%20600062%2C%20India!5e0!3m2!1sen!2sin!4v1000000000000!5m2!1sen!2sin"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="PS Pet Care Location - 3rd street, Kalaingar Nagar, Avadi, Chennai"
          class="rounded-2xl"
        ></iframe>
        
        <!-- Overlay for better accessibility -->
        <div class="absolute top-4 right-4 bg-white dark:bg-gray-800 px-3 py-2 rounded-lg shadow-md">
          <a
            href="https://www.google.com/maps/search/3rd+street,+Kalaingar+Nagar,+Avadi,+Chennai,+Tamil+Nadu+600062,+India"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 text-sm font-medium text-gray-900 dark:text-white hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-2M14 4h6m0 0v6m0-6L10 14" />
            </svg>
            Open in Maps
          </a>
        </div>
      </div>
      
      <!-- Location Info -->
      <div class="mt-8 grid md:grid-cols-3 gap-6">
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 dark:bg-primary-900/30 rounded-full flex items-center justify-center text-primary-600 dark:text-primary-400 text-2xl mx-auto mb-4">
            üìç
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Location</h3>
          <p class="text-gray-600 dark:text-gray-400">
            3rd street, Kalaingar Nagar<br/>
            Avadi, Chennai - 600062
          </p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-secondary-100 dark:bg-secondary-900/30 rounded-full flex items-center justify-center text-secondary-600 dark:text-secondary-400 text-2xl mx-auto mb-4">
            üì±
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Contact Us</h3>
          <p class="text-gray-600 dark:text-gray-400">
            WhatsApp: {siteConfig.phone}<br/>
            Email: {siteConfig.email}
          </p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-accent-100 dark:bg-accent-900/30 rounded-full flex items-center justify-center text-accent-600 dark:text-accent-400 text-2xl mx-auto mb-4">
            üè†
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Home-Based Care</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Safe, comfortable environment where pets feel at home
          </p>
        </div>
      </div>
    </div>
  </section>
</PageLayout>