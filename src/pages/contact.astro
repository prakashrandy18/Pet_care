---
import PageLayout from '../layouts/PageLayout.astro'
import ContactForm from '../components/forms/ContactForm'
import BookingForm from '../components/forms/BookingForm'
import { pageSEO } from '../config/seo'
import { siteConfig } from '../config/theme'
---

<PageLayout
  title={pageSEO.contact.title}
  description={pageSEO.contact.description}
>
  <!-- Hero Section -->
  <section class="relative py-20 bg-gradient-to-br from-accent-50 via-white to-primary-50 dark:from-gray-900 dark:via-gray-950 dark:to-gray-900">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-4xl mx-auto">
        <div class="inline-flex items-center gap-2 bg-accent-100 dark:bg-accent-900/30 text-accent-700 dark:text-accent-400 px-4 py-2 rounded-full text-sm font-medium mb-6">
          <span>üìû</span>
          <span>Contact Us</span>
        </div>
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold text-gray-900 dark:text-white mb-6">
          Let's Get Your Pet <span class="text-gradient">Started</span>
        </h1>
        
        <p class="text-xl text-gray-600 dark:text-gray-400">
          Book a service, schedule a tour, or just say hello! We're here to help.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Info & Forms Section -->
  <section class="section-padding">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Contact Information -->
        <div class="lg:col-span-1 space-y-8">
          <!-- Quick Contact -->
          <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-soft p-6">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">
              Quick Contact
            </h3>
            
            <div class="space-y-4">
              <a
                href={`tel:${siteConfig.phone}`}
                class="flex items-start gap-4 p-4 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors group"
              >
                <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900/30 rounded-full flex items-center justify-center text-primary-600 dark:text-primary-400 group-hover:scale-110 transition-transform">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-gray-900 dark:text-white">Call Us</p>
                  <p class="text-primary-600 dark:text-primary-400">{siteConfig.phone}</p>
                </div>
              </a>
              
              <a
                href={`mailto:${siteConfig.email}`}
                class="flex items-start gap-4 p-4 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors group"
              >
                <div class="w-12 h-12 bg-secondary-100 dark:bg-secondary-900/30 rounded-full flex items-center justify-center text-secondary-600 dark:text-secondary-400 group-hover:scale-110 transition-transform">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-gray-900 dark:text-white">Email Us</p>
                  <p class="text-secondary-600 dark:text-secondary-400">{siteConfig.email}</p>
                </div>
              </a>
              
              <div class="flex items-start gap-4 p-4">
                <div class="w-12 h-12 bg-accent-100 dark:bg-accent-900/30 rounded-full flex items-center justify-center text-accent-600 dark:text-accent-400">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-gray-900 dark:text-white">Visit Us</p>
                  <p class="text-gray-600 dark:text-gray-400">
                    {siteConfig.address.street}<br />
                    {siteConfig.address.city}, {siteConfig.address.state} {siteConfig.address.zip}
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Operating Hours -->
          <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-soft p-6">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">
              Operating Hours
            </h3>
            
            <div class="space-y-3">
              <div class="flex justify-between items-center py-2 border-b border-gray-100 dark:border-gray-700">
                <span class="text-gray-600 dark:text-gray-400">Monday - Friday</span>
                <span class="font-medium text-gray-900 dark:text-white">{siteConfig.hours.weekday}</span>
              </div>
              <div class="flex justify-between items-center py-2 border-b border-gray-100 dark:border-gray-700">
                <span class="text-gray-600 dark:text-gray-400">Saturday</span>
                <span class="font-medium text-gray-900 dark:text-white">{siteConfig.hours.saturday}</span>
              </div>
              <div class="flex justify-between items-center py-2">
                <span class="text-gray-600 dark:text-gray-400">Sunday</span>
                <span class="font-medium text-gray-900 dark:text-white">{siteConfig.hours.sunday}</span>
              </div>
            </div>
            
            <div class="mt-6 p-4 bg-green-50 dark:bg-green-900/20 rounded-lg">
              <p class="text-sm text-green-700 dark:text-green-400 flex items-center gap-2">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                24/7 boarding services available
              </p>
            </div>
          </div>

          <!-- Emergency Contact -->
          <div class="bg-red-50 dark:bg-red-900/20 rounded-2xl p-6">
            <h3 class="text-xl font-semibold text-red-700 dark:text-red-400 mb-2">
              Emergency Contact
            </h3>
            <p class="text-gray-600 dark:text-gray-400 mb-4">
              For urgent pet care needs outside business hours
            </p>
            <a
              href="tel:+15559119111"
              class="inline-flex items-center gap-2 text-red-600 dark:text-red-400 font-medium hover:underline"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              (555) 911-9111
            </a>
          </div>
        </div>

        <!-- Forms Column -->
        <div class="lg:col-span-2 space-y-12">
          <!-- Contact Form -->
          <div>
            <h2 class="text-2xl font-display font-bold text-gray-900 dark:text-white mb-6">
              Send Us a Message
            </h2>
            <ContactForm client:load />
          </div>

          <!-- Booking Form -->
          <div id="booking">
            <h2 class="text-2xl font-display font-bold text-gray-900 dark:text-white mb-6">
              Book a Service
            </h2>
            <BookingForm client:visible />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="section-padding bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-display font-bold text-gray-900 dark:text-white mb-4">
          Find Us Here
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
          Conveniently located with ample parking and easy access
        </p>
      </div>
      
      <!-- Map Placeholder -->
      <div class="relative h-96 bg-gray-200 dark:bg-gray-800 rounded-2xl overflow-hidden">
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="text-center">
            <div class="text-6xl mb-4">üìç</div>
            <p class="text-gray-600 dark:text-gray-400">
              Interactive map would go here
            </p>
          </div>
        </div>
      </div>
      
      <!-- Directions -->
      <div class="mt-8 grid md:grid-cols-3 gap-6">
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 dark:bg-primary-900/30 rounded-full flex items-center justify-center text-primary-600 dark:text-primary-400 text-2xl mx-auto mb-4">
            üöó
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2">By Car</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Free parking available on-site with easy drop-off area
          </p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-secondary-100 dark:bg-secondary-900/30 rounded-full flex items-center justify-center text-secondary-600 dark:text-secondary-400 text-2xl mx-auto mb-4">
            üöå
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Public Transit</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Bus stops 12 and 45 are just a 5-minute walk away
          </p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-accent-100 dark:bg-accent-900/30 rounded-full flex items-center justify-center text-accent-600 dark:text-accent-400 text-2xl mx-auto mb-4">
            üö∂
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Walking</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Located in a pet-friendly neighborhood with sidewalks
          </p>
        </div>
      </div>
    </div>
  </section>
</PageLayout>