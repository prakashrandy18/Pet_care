---
import { siteConfig } from '../../config/theme'

export interface Props {
  title: string
  description: string
  image?: string
  noindex?: boolean
  canonical?: string
  type?: 'website' | 'article'
  publishedDate?: string
  modifiedDate?: string
  author?: string
}

const {
  title,
  description,
  image = '/og-image.jpg',
  noindex = false,
  canonical = Astro.url.href,
  type = 'website',
  publishedDate,
  modifiedDate,
  author
} = Astro.props

const fullTitle = title.includes(siteConfig.name) ? title : `${title} | ${siteConfig.name}`
const fullImage = image.startsWith('http') ? image : new URL(image, Astro.site || siteConfig.url).href
---

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="title" content={fullTitle} />
<meta name="description" content={description} />
<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover, user-scalable=no">
<link rel="canonical" href={canonical} />

<!-- Robots -->
{noindex && <meta name="robots" content="noindex, nofollow" />}

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonical} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={fullImage} />
<meta property="og:site_name" content={siteConfig.name} />
<meta property="og:locale" content="en_US" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonical} />
<meta property="twitter:title" content={fullTitle} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={fullImage} />
<meta property="twitter:site" content="@pspetcare" />

<!-- Article specific -->
{type === 'article' && publishedDate && (
  <>
    <meta property="article:published_time" content={publishedDate} />
    {modifiedDate && <meta property="article:modified_time" content={modifiedDate} />}
    {author && <meta property="article:author" content={author} />}
  </>
)}

<!-- Additional SEO tags -->
<meta name="author" content={siteConfig.name} />
<meta name="publisher" content={siteConfig.name} />
<meta name="apple-mobile-web-app-title" content={siteConfig.name} />
<meta name="application-name" content={siteConfig.name} />
<meta name="msapplication-TileColor" content="#3b82f6" />
<meta name="format-detection" content="telephone=no" />

<!-- Local Business SEO -->
<meta name="keywords" content="pet daycare Chennai, pet boarding Chennai, pet care Avadi, dog daycare Chennai, cat boarding Tamil Nadu, home based pet care" />
<meta name="language" content="en-IN" />
<meta name="distribution" content="local" />
<meta name="rating" content="general" />

<!-- Business Information -->
<meta name="business:contact_data:locality" content="Chennai" />
<meta name="business:contact_data:region" content="Tamil Nadu" />
<meta name="business:contact_data:country_name" content="India" />
<meta name="business:contact_data:phone_number" content={siteConfig.phone} />

<!-- Geo tags for local SEO -->
<meta name="geo.region" content="IN-TN" />
<meta name="geo.placename" content={siteConfig.address.city} />
<meta name="geo.position" content="13.1206892;80.1013128" />
<meta name="ICBM" content="13.1206892, 80.1013128" />

<!-- Contact information -->
<meta property="og:phone_number" content={siteConfig.phone} />
<meta property="og:email" content={siteConfig.email} />
<meta property="og:locality" content={siteConfig.address.city} />
<meta property="og:region" content={siteConfig.address.state} />
<meta property="og:postal-code" content={siteConfig.address.zip} />
<meta property="og:country-name" content={siteConfig.address.country} />

<!-- Performance Optimization -->
<link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link rel="preconnect" href="https://images.unsplash.com">
<link rel="dns-prefetch" href="//forms.gle">

<!-- Preload critical resources -->
<link rel="preload" href="/images/hero/happy-pets.jpg" as="image" type="image/jpeg">
<link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Fredoka:wght@400;600&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
<noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Fredoka:wght@400;600&display=swap"></noscript>

<!-- Font display optimization -->
<style>
  @font-face {
    font-family: 'Inter';
    font-display: swap;
  }
  @font-face {
    font-family: 'Fredoka';
    font-display: swap;
  }
</style>

